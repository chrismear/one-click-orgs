%form{:action=>url(:action=>'propose_text_amendment'), :method=>:post}
  %div.constitution_proposal
    %p.reveal_link
      %a{:href => '#'}
        Propose an amendment to this clause
    %div.proposal_form{:style => 'display: none;'}
      %p
        %label{:for => 'value'}
          Change the organisation's name to:
        %input{:name => 'value', :value => @organisation_name}
        %input{:type => 'hidden', :name => 'name', :value => 'organisation_name'}
      %p
        = submit "Propose change", :id => 'submit'
      %p
        %a{:href => '#', :class => 'cancel_link'}
          Cancel